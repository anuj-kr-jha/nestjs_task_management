    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch main.ts",
            "runtimeArgs": ["-r", "ts-node/register"],
            "args": ["${workspaceFolder}/src/main.ts"],
            "outputCapture": "std",
            "runtimeExecutable": "/home/evil/.local/share/nvm/v16.15.0/bin/node"
        },
        {
            "type": "pwa-node",
            "request": "attach",
            "name": "Attach to debug",
            "port": 9230,
            "restart": true,
            "cwd": "${workspaceRoot}",
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
